<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    android:orientation="vertical"
    tools:context=".SignalAct">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:rotation="180"
            android:src="@drawable/ic_back"
            app:tint="#fff">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/monteserrat_semibold"
            android:text="Report a problem"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold">

        </TextView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="6dp"
        android:background="@drawable/x_solid_top_radius_10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reporting_type"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/x_solid_grey_10dp"
                android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                android:padding="12dp"
                android:hint="Reporting type">

            </TextView>

            <EditText
                android:id="@+id/msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:layout_marginTop="10dp"
                android:background="@drawable/x_solid_grey_10dp"
                android:minHeight="300dp"
                android:padding="12dp"
                android:hint="Message...">

            </EditText>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/report_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/x_solid_orange_10dp"
                android:fontFamily="@font/monteserrat_semibold"
                android:text="Report"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold">

            </androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>